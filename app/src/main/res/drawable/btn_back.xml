<ripple xmlns:android="http://schemas.android.com/apk/res/android"
    android:color="#1E88E51A"> <!-- мягкий ripple -->

    <item>
        <shape android:shape="rectangle">
            <solid android:color="#E7F0FD" /> <!-- нежно-голубой фон -->
            <corners android:radius="100dp" /> <!-- полностью округлая -->
            <stroke android:width="1dp" android:color="#D0E3F7"/> <!-- лёгкая обводка -->
        </shape>
    </item>
</ripple>